<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Brands</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            height: 100vh;
            background-color: #e8d7b4;
            color: #fff;
            padding-top: 1rem;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            width: 200px;
        }

        .sidebar a {
            color: #000000;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #7fdf9a;
        }

        .navbar {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            margin-bottom: 0;
        }

        .content {
            margin-left: 200px;
            margin-top: 56px;
            padding: 2rem;
            height: 100vh;
            overflow-y: auto;
        }

        .table-container {
            margin-top: 2rem;
        }

        .search-bar {
            width: 100%;
            margin-bottom: 1rem;
        }

        .form-inline input {
            margin-right: 0.5rem;
        }

        .btn-actions {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-user"></i> Admin
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-users"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-box"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-sliders-h"></i> Category
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="fas fa-briefcase"></i> Brand
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-tag"></i> Coupon
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-credit-card"></i> Payment
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col-md-10 content">
                <div class="container my-5">
                    <h2 class="text-center mb-4">Brand Management</h2>

                    <!-- Search Bar -->
                    <div class="d-flex justify-content-end mb-4 align-items-center">
                        <input type="text" class="form-control search-bar mr-2" placeholder="Add Brand" id="addBrand">
                        <button class="btn btn-success" onclick="addBrand()">
                            <i class="fas fa-plus"></i> Add Brand
                        </button>
                    </div>

                    <!-- Brand Table -->
                    <div class="table-container">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Brand Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof brands !== 'undefined' && brands.length > 0) { %>
                                    <% brands.forEach((element, index) => { %>
                                        <tr>
                                            <td><%= element._id %></td>
                                            <td><%= element.brand_name %></td>
                                            <td>
                                                <% if (element.isDeleted) { %>
                                                    <button class="btn btn-primary btn-sm" onclick="restoreBrand('<%= element._id %>')">
                                                        <i class="fas fa-recycle"></i> Restore
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-warning btn-sm" onclick="editBrand('<%= element._id %>', '<%= element.brand_name %>')">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </button>
                                                    <button class="btn btn-danger btn-sm" onclick="deleteBrand('<%= element._id %>')">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" class="text-center">No brands available</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Edit Brand Modal -->
                    <div class="modal fade" id="editBrandModal" tabindex="-1" role="dialog" aria-labelledby="editBrandModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editBrandModalLabel">Edit Brand</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="editBrandName">Brand Name</label>
                                        <input type="text" class="form-control" id="editBrandName">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary" onclick="saveBrandChanges()">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </main>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentBrandId = null;

        async function addBrand() {
            const brandName = document.getElementById('addBrand').value;
            try {
                if (brandName.trim() === '') {
                    alert('Please enter a brand name.');
                    return;
                }
                console.log(1);
                
                const response = await fetch('/brand/add-brand', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ brand_name: brandName })
                });

                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to add brand');
                }
            } catch (error) {
                console.error('Error while adding brand', error);
            }
        }

        function deleteBrand(brandId) {
            if (confirm('Are you sure you want to delete this brand?')) {
                fetch(`/brand/delete-brand/${brandId}`, {
                    method: 'PUT'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Brand deleted successfully!');
                        location.reload();
                    } else {
                        alert('Failed to delete brand');
                    }
                })
                .catch(error => console.error('Error deleting brand:', error));
            }
        }

        function restoreBrand(brandId) {
            if (confirm('Are you sure you want to restore this brand?')) {
                fetch(`/brand/restore-brand/${brandId}`, {
                    method: 'PUT'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Brand restored successfully!');
                        location.reload();
                    } else {
                        alert('Failed to restore brand');
                    }
                })
                .catch(error => console.error('Error restoring brand:', error));
            }
        }

        function editBrand(brandId, brandName) {
            currentBrandId = brandId;
            document.getElementById('editBrandName').value = brandName;
            $('#editBrandModal').modal('show');
        }

        async function saveBrandChanges() {
            const updatedBrandName = document.getElementById('editBrandName').value;
            
            if (updatedBrandName.trim() === '') {
                alert('Please enter a brand name.');
                return;
            }

            try {
                const response = await fetch(`/brand/update-brand/${currentBrandId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ brand_name: updatedBrandName })
                });

                if (response.ok) {
                    alert('Brand updated successfully!');
                    $('#editBrandModal').modal('hide');
                    location.reload();
                } else {
                    alert('Failed to update brand');
                }
            } catch (error) {
                console.error('Error updating brand:', error);
            }
        }
    </script>
</body>
</html>
