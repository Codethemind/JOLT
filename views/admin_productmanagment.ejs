<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        .sidebar {
            height: 100vh;
            background-color: #e8d7b4;
            color: #fff;
            padding-top: 1rem;
            position: fixed;
        }
        .sidebar a {
            color: #000000;
            text-decoration: none;
            padding: 0.75rem;
        }
        .sidebar a:hover {
            background-color: #7fdf9a;
        }
        .content {
            margin-left: 220px;
            padding: 2rem;
        }
        .navbar {
            margin-bottom: 0;
            background-color: #f8f9fa;
            position: fixed;
            width: 100%;
            z-index: 1000;
        }
        .container-fluid {
            padding-top: 60px; /* Adjust for fixed navbar */
        }
        .btn-edit, .btn-delete {
            display: flex;
            align-items: center;
            font-size: 0.875rem;
        }
        .btn-edit i {
            margin-right: 0.5rem;
        }
        .btn-delete i {
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fas fa-user"></i> Admin
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/admin_dashbord">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/admin_usermanagment">
                            <i class="fas fa-users"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/admin_productmanagment">
                            <i class="fas fa-box"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-shopping-cart"></i> Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/admin_catagorymanagment">
                            <i class="fas fa-sliders-h"></i> Category
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/admin_brandmanagment">
                            <i class="fas fa-briefcase"></i> Brand
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-tag"></i> Coupen
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-credit-card"></i> Payment
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/logout">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col-md-10 content">
                <div class="container my-5">
                    <h2 class="text-center mb-4">Product Management</h2>
                    
                    <!-- Add Product Button -->
                    <div class="mb-3">
                        <a class="btn btn-primary" href="/admin/admin_addproduct">Add Product</a>
                    </div>
                    
                    <!-- Product Table -->
                    <table class="table table-striped table-hover mt-5">
                        <thead>
                            <tr>
                              <th scope="col">Sl</th>
                              <th scope="col">image</th>
                              <th scope="col">product_Name</th>
                              <th scope="col">Category</th>
                              <th scope="col">Brand</th>
                              <th scope="col">Stock</th>
                              <th scope="col">Price</th>
                              <th scope="col">Action</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% if(typeof products !='undefined' && products.length > 0 ) { %>
                              <% products.forEach((products,index) => { %>
                              <tr>
                                <th scope="row"><%= index+1 %></th>
                                <td><img src="/<%= products.variants[0].images[0] %>" style="width: 45px; height: 45px; object-fit: cover;" class="img-fluid" alt="icon"></td>
                                <td><%= products.product_name %></td>
                                <td><%= products.category_id.name %></td>
                                <td><%= products.brand_id.brand_name %></td>
                                <td class="<%= products.variants[0].stock > 0 ? 'text-success' : 'text-danger' %>">
                                  <%= products.variants[0].stock > 0 ? `${products.variants[0].stock} In Stock` : 'Out of Stock' %>
                                </td>
                                <td><%= products.variants[0].price %></td>
                                <td><% if (products.isDelete) { %>
                                    <button class="btn btn-primary btn-sm" onclick="restoreCategory('<%= products._id %>')">
                                        <i class="fas fa-recycle"></i> Restore
                                    </button>
                                <% } else { %>
                                    <button class="btn btn-warning btn-sm" onclick="window.location.href='/admin/editproduct/<%= products._id %>'">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    
                                    <button class="btn btn-danger btn-sm" onclick="deleteCategory('<%= products._id %>')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                <% } %>
                              </td>
                                
                              </tr>
                              <% }) %>
                              <% } else { %>
                                <tr>
                                  <td  colspan="9" class="text-center">No product available</td>
                                </tr>
                              <% } %>
                            
                          </tbody>
                      </table>
                </div>
            </main>
        </div>
    </div>

    <script>
       

       function deleteCategory(categoryId) {
            if (confirm('Are you sure you want to delete this category?')) {
                fetch(`/admin/delete-product/${categoryId}`, {
                    method: 'PUT'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Category deleted successfully!');
                        location.reload();
                    } else {
                        alert('Failed to delete category');
                    }
                })
                .catch(error => console.error('Error deleting category:', error));
            }
        }

        function restoreCategory(categoryId) {
            if (confirm('Are you sure you want to restore this category?')) {
                fetch(`/admin/restore-product/${categoryId}`, {
                    method: 'PUT'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Category restored successfully!');
                        location.reload();
                    } else {
                        alert('Failed to restore category');
                    }
                })
                .catch(error => console.error('Error restoring category:', error));
            }
        }

        


    </script>

    <!-- JavaScript dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</body>
</html>
