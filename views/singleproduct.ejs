                        <span>(150 Reviews)</span>
                    </div>
                    <h4 class="text-primary mb-3">INR <%= product.variants[0].price %></h4>
                    <p><%= product.product_highlights %></p>
            
                    <!-- Colors -->
                    <div class="mb-3">
                        <label for="colors" class="form-label">Colours:</label>
                        <select id="colors" class="form-select">
                            <option selected><%= product.variants[0].color %></option>
                            <option>Black</option>
                        </select>
                    </div>
            
                    <!-- Storage -->
                    <div class="mb-3">
                        <label for="size" class="form-label">Storage:</label>
                        <select id="size" class="form-select">
                            <option>64GB</option>
                            <option>128GB</option>
                            <option>256GB</option>
                            <option selected>64GB</option>
                            <option>512GB</option>
                            <option>1TB</option>
                            <option>2TB</option>
                        </select>
                    </div>
            
                    <!-- Stock Info -->
                    <h5 class="<%= product.variants[0].stock > 0 ? 'text-success' : 'text-danger' %>">
                        <%= product.variants[0].stock > 0 ? `${product.variants[0].stock} In Stock` : 'Out of Stock' %>
                    </h5>
            
                  <!-- Quantity -->
         <div class="mb-3 mt-3 d-flex align-items-center">
            <label for="quantity" class="form-label me-3">Quantity:</label>
            <input type="number" id="quantity" class="form-control w-25" value="2" min="1">
         </div>

            
                    <!-- Buy/Notify Button -->
                    <div class="mb-3">
                        <% if(product.variants[0].stock > 0) { %>
                            <button class="btn btn-primary w-100">Buy Now</button>
                        <% } else { %>
                            <button class="btn btn-danger w-100">Notify me</button>
