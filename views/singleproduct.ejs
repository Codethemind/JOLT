    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Select all Add to Cart buttons
            const addToCartButtons = document.querySelectorAll('.btn-cart');
    
            addToCartButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const productId = this.getAttribute('data-product-id');
                    const variantId = this.getAttribute('data-variant-id');
                    const quantity = document.getElementById('qty') ? document.getElementById('qty').value : 1;
                    const stock = this.getAttribute('data-stock'); // Fetch stock value
    
                    // DEBUGGING: Check if all values are correctly fetched
                    console.log('Product ID:', productId);
                    console.log('Variant ID:', variantId);
                    console.log('Quantity:', quantity);
                    console.log('Stock:', stock);
    
                    // Check if stock is less than or equal to zero
                    if (stock <= 0) {
                        // Using SweetAlert v2 syntax
                        Swal.fire({
                            title: "Out of Stock",
                            text: "This product is currently out of stock.",
                            icon: "warning",
                            confirmButtonText: "OK",
                        });
                        return; // Exit the function to prevent adding to cart
                    }
    
                    // Prepare the data to send to the backend
                    const data = {
                        productId: productId,
                        variantId: variantId,
                        quantity: quantity
                    };
    
                    // Call the server-side route to add the product to the cart using fetch (AJAX)
                    fetch('/api/cart/add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.message) {
                            Swal.fire({
                                title: "Success!",
                                text: "Product added to cart successfully!",
                                icon: "success",
                                confirmButtonText: "OK",
                            });
                            // Optionally, update cart icon or cart counter
                        } else {
                            Swal.fire({
                                title: "Error!",
                                text: "Error adding product to cart!",
                                icon: "error",
                                confirmButtonText: "OK",
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            title: "Oops!",
                            text: "An error occurred while adding the product to the cart.",
