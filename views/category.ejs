<div class="page-wrapper">
    <section>
        <!-- Display category name -->
        <div class="container pt-2">
            <ol class="breadcrumb breadcrumb-arrow mb-4">
                <li class="breadcrumb-item"><a href="/user/">Home</a></li>
                <li class="breadcrumb-item"><a href="/user/category/<%= category._id %>"><%= category.name %></a></li>
            </ol>
        </div>

        <!-- Display products -->
        <h4 class="text-center"><%= category.name %></h4>
        <div class="container">
            <div class="row">
                <% products.forEach((element) => { %>
                    <div class="col-md-3 mt-5">
                        <div class="item">
                            <div class="thumb">
                                <a href="/user/product?id=<%= element._id %>">
                                    <img style="width: 250px; height: 45vh; object-fit: cover;" src="/<%= element.variants[0].images[0] %>" alt="">
                                </a>
                            </div>
                            <div class="product-body">
                                <div class="product-cat">
                                    <a href="#"><%= category.name %></a>
                                </div>
                                <h3 class="product-title">
                                    <a href="/user/product?id=<%= element._id %>"><%= element.product_name %></a>
                                </h3>
                                <div class="product-price">
                                    <% if (element.variants[0].offer) { %>
                                        <!-- If offer is present, show discounted price and original price -->
                                        <p class="card-text text-danger">
                                            <small><del><%= element.variants[0].price %></del></small>
                                            <%= element.variants[0].discount_price %> <!-- Display discounted price -->
                                        </p>
                                    <% } else { %>
                                        <!-- If no offer, show original price -->
                                        <p class="card-text text-danger">
                                            <%= element.variants[0].price %>
                                        </p>
                                    <% } %>
                                </div>
                                <div class="ratings-container">
                                    <div class="ratings">
                                        <div class="ratings-val" style="width: 20%;"></div>
                                    </div>
                                    <span class="ratings-text">( 2 Reviews )</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        
    </section>

    <!-- Pagination Section -->
    <div class="container mt-5">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-lg justify-content-center bg-dark-subtle">
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="/user/category/<%= category._id %>?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                <% } %>

                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="/user/category/<%= category._id %>?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>

                <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="/user/category/<%= category._id %>?page=<%= currentPage + 1 %>">Next</a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
