
<%- include('./partial/admin_header') %>



    <div class="container-fluid">
        <div class="row">
         

            <!-- Main Content -->
            <main role="main" class="col-md-10 content">
                <div class="container">
                    <h1>Dashboard</h1>
                    <div class="row">
                        <!-- Example Chart -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    Sales Overview
                                </div>
                                <div class="card-body">
                                    <canvas id="salesChart"></canvas>
                                    <!-- View and Download Report Buttons -->
                                    <button class="btn btn-primary mt-3" id="viewReportBtn">View Report</button>
                                    <a href="#" class="btn btn-success mt-3" id="downloadReportBtn" download="sales_report.csv">Download Report</a>
                                </div>
                            </div>
                        </div>
                        <!-- Example Table -->
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    Recent Orders
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Order ID</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>1</td>
                                                <td>#001</td>
                                                <td>2024-09-01</td>
                                                <td>Shipped</td>
                                            </tr>
                                            <tr>
                                                <td>2</td>
                                                <td>#002</td>
                                                <td>2024-09-02</td>
                                                <td>Processing</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- JavaScript dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Sales Chart Script -->
    <script>
        var ctx = document.getElementById('salesChart').getContext('2d');
        var salesChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Sales',
                    data: [10, 20, 30, 40, 50, 60],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Generate and Download CSV Report
        document.getElementById('downloadReportBtn').addEventListener('click', function () {
            var csvContent = "data:text/csv;charset=utf-8,Month,Sales\n" +
                "January,10\n" +
                "February,20\n" +
                "March,30\n" +
                "April,40\n" +
                "May,50\n" +
                "June,60\n";
            
            var encodedUri = encodeURI(csvContent);
            this.setAttribute("href", encodedUri);
        });

        // View Report Button Logic
        document.getElementById('viewReportBtn').addEventListener('click', function () {
            alert("Sales Report:\nJanuary: 10\nFebruary: 20\nMarch: 30\nApril: 40\nMay: 50\nJune: 60");
        });
    </script>
</body>
</html>

